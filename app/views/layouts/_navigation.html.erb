<%= link_to "Jobless", root_path, :class => 'brand' %>
<ul class="nav user-menu underline">
  <li><%= link_to I18n.t("employee.all_listings"), listings_path %></li>
  <%- if current_employee %>
      <li class="my-listins"><%= link_to "#{I18n.t("employee.my_listings")}", my_listings_path %></li>
      <%- if current_employee.unread_messages.count == 0  %>
          <li class="my-messages"><%= link_to I18n.t("employee.my_messages"), messages_path %></li>
      <%else %>
          <li class="my-messages"><%= link_to "#{I18n.t('employee.my_messages')}(#{current_employee.unread_messages.count})", messages_path %></li>
      <%- end %>
  <%- end  %>
</ul>
<ul class="nav user-links">
  <% if user_signed_in? %>
      <li class="nav-email">
        <%= link_to current_user.email, edit_employee_registration_path %>
      </li>
  <% else %>
      <li>
        <%= link_to I18n.t("common.signup"), new_employee_registration_path %>
      </li>
  <% end %>
  <% if user_signed_in? %>
      <li>
      <%= link_to I18n.t("common.logout"), destroy_employee_session_path, :method=>'delete' %>
      </li>
<% else %>
      <li>
      <%= link_to I18n.t("common.login"), new_employee_session_path %>
      </li>
<% end %>
</ul>